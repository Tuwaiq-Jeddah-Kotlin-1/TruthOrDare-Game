<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:background="@drawable/round_corner">



    <EditText
        android:id="@+id/suggestion"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:hint="Enter your suggestion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/saveToAPI"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_margin="40dp"
        android:background="@drawable/mybtn"
        android:contentDescription="@string/start_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/suggestion"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/suggestion"
        app:layout_constraintTop_toBottomOf="@+id/suggestion"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvSaveToAPI"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Send suggestion"
        android:textColor="@color/myDark_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/saveToAPI"
        app:layout_constraintEnd_toEndOf="@+id/saveToAPI"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/saveToAPI"
        app:layout_constraintStart_toStartOf="@+id/saveToAPI"
        app:layout_constraintTop_toTopOf="@+id/saveToAPI" />


</androidx.constraintlayout.widget.ConstraintLayout>